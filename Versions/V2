<body>
  <h1>üåê Joey's Browser Main Screen (DEBUG - GOOGLE MODE)</h1>

  <div class="search-container">
    <input id="searchInput" type="text" placeholder="Typ een zoekterm of URL...">
    <button onclick="performSearch()">Zoek</button>
    <label class="search-toggle">
      <input type="checkbox" id="modeSwitch" checked>
      <span id="modeLabel">üîç Google</span>
    </label>
  </div>

  <div class="shortcuts" id="shortcuts">
    <!-- Permanente snelkoppeling -->
    <div class="shortcut" data-permanent="true">
      <h3>üè™ Kassa</h3>
      <a href="https://joey226611.github.io/rfepo" target="_blank">Openen</a>
    </div>
  </div>

  <div class="add-link">
    <h3>‚ûï Voeg een snelkoppeling toe</h3>
    <input type="text" id="linkName" placeholder="Naam">
    <input type="url" id="linkURL" placeholder="https://voorbeeld.nl">
    <button onclick="addShortcut()">Toevoegen</button>
  </div>

  <div class="embeds">
    <iframe src="https://mail.google.com/mail/u/0/#inbox" title="Gmail"></iframe>
    <iframe src="https://drive.google.com/drive/my-drive" title="Google Drive"></iframe>
  </div>

<script>
  console.log("‚úÖ Debug mode actief (Google versie)");

  const searchInput = document.getElementById("searchInput");
  const modeSwitch = document.getElementById("modeSwitch");
  const modeLabel = document.getElementById("modeLabel");
  const shortcutsContainer = document.getElementById("shortcuts");

  // Toggle zoekmodus
  modeSwitch.addEventListener("change", () => {
    const isGoogle = modeSwitch.checked;
    modeLabel.textContent = isGoogle ? "üîç Google" : "üåê URL";
    console.log("Zoekmodus:", isGoogle ? "Google" : "URL");
  });

  // Uitvoeren van zoekopdracht
  function performSearch() {
    const query = searchInput.value.trim();
    if (!query) return alert("Typ iets in de zoekbalk!");
    const isGoogle = modeSwitch.checked;
    let url;

    if (isGoogle) {
      url = `https://www.google.com/search?q=${encodeURIComponent(query)}`;
    } else {
      if (query.startsWith("http://") || query.startsWith("https://")) {
        url = query;
      } else {
        url = "https://" + query;
      }
    }

    console.log("Openen:", url);
    window.open(url, "_blank");
  }

  // Snelkoppelingen uit localStorage laden
  function loadShortcuts() {
    const data = JSON.parse(localStorage.getItem("customShortcuts") || "[]");
    data.forEach(link => createShortcut(link.name, link.url, false));
  }

  // Nieuwe snelkoppeling toevoegen
  function addShortcut() {
    const name = document.getElementById("linkName").value.trim();
    const url = document.getElementById("linkURL").value.trim();

    if (!name || !url) return alert("Naam en URL invullen!");
    createShortcut(name, url, true);
    saveShortcuts();
  }

  // Shortcut maken in DOM
  function createShortcut(name, url, isCustom) {
    const div = document.createElement("div");
    div.className = "shortcut";
    div.innerHTML = `
      <h3>${name}</h3>
      <a href="${url}" target="_blank">Openen</a>
      ${isCustom ? '<button onclick="removeShortcut(this)">Verwijder</button>' : ''}
    `;
    shortcutsContainer.appendChild(div);
  }

  // Verwijder shortcut
  function removeShortcut(btn) {
    btn.parentElement.remove();
    saveShortcuts();
  }

  // Opslaan in localStorage
  function saveShortcuts() {
    const custom = [];
    document.querySelectorAll(".shortcut").forEach(el => {
      if (!el.dataset.permanent) {
        const name = el.querySelector("h3").textContent;
        const url = el.querySelector("a").href;
        custom.push({ name, url });
      }
    });
    localStorage.setItem("customShortcuts", JSON.stringify(custom));
    console.log("üíæ Snelkoppelingen opgeslagen:", custom);
  }

  loadShortcuts();
</script>
</body>
